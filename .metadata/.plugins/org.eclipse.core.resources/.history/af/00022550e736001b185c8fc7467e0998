	    $('#delete').click(function(){
	    	var result = confirm('정말 삭제하시겠습니까?'); 

	    	if(result){ 

		    	yes 
		    	location.replace('index.php');} 

		    else{ no }

		    });


// 	    ----------------------------------------click시 밑에 contents가 나오게 하는 코드div
		$("#inner_item1").hide();

		$(".item1").click(function () { 
			$("#inner_item1").show();
			$(".item1").on("click" , function(){
				$("#inner_item1").hide();
			$(".item1").on("click" , function(){
				$("#inner_item1").hide();
			});
		});  
