<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="#0073B1">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_arrow_white_24"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="음성인식 서비스"
            android:scaleType="center"
            android:textColor="@android:color/white"
            android:textSize="40dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_more_white_24"/>

    </LinearLayout>


    <!--
    1. button 2 vertical - weight // relative랑 거의 흡사하다.
    2. button 2 horizontal
    -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="362dp"
        android:scaleType="centerCrop"
        android:src="@drawable/FriDay" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/AppCompatButton1"
        android:layout_width="match_parent"
        android:layout_height="322dp"
        android:text="음성인식 진행중
        잠시만기다려주세요"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</LinearLayout>